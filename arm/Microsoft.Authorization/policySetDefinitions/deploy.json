{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policySetDefinitionName": {
            "type": "string",
            "maxLength": 64,
            "metadata": {
                "description": "Required. Specifies the name of the policy assignment."
            }
        },
        "displayName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Optional. The display name of the policy assignment. If not provided, will be replaced with the Policy Assignment Name"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[deployment().location]",
            "metadata": {
                "description": "Optional. Location for all resources."
            }
        },
        "policySetDescription": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Optional. This message will be part of response in case of policy violation. If not provided, will be replaced with the Policy Assignment Name"
            }
        },
        "managementGroupId": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Optional. The ID of the Management Group (Scope). Cannot be used with subscriptionId and does not support tenant level deployment (i.e. '/')"
            }
        },
        "subscriptionId": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Optional. The ID of the Azure Subscription (Scope). Cannot be used with managementGroupId"
            }
        },
        "metadata": {
            "type": "object",
            "defaultValue": {},
            "metadata": {
                "description": "Optional. The policy assignment metadata. Metadata is an open ended object and is typically a collection of key value pairs."
            }
        },
        "policyDefinitions": {
            "type": "array",
            "metadata": {
                "description": "Required. The array of Policy definitions object to include for this policy set. Each object must include the definition ID, parameters, "
            }
        },
        "policyDefinitionGroups": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description": "Optional. The metadata describing groups of policy definition references within the policy set definition."
            }
        },
        "parameters": {
            "type": "object",
            "defaultValue": {},
            "metadata": {
                "description": "Optional. The policy set definition parameters that can be used in policy definition references."
            }
        }
    },
    "variables": {
        "emptyArray": [],
        "policySetDefinitionName": "[replace(parameters('policySetDefinitionName'),' ','-')]",
        "properties": {
            "policyType": "Custom",
            "displayName": "[if(empty(parameters('displayName')),json('null'),parameters('displayName'))]",
            "description": "[if(empty(parameters('policySetDescription')),json('null'),parameters('policySetDescription'))]",
            "metadata": "[if(empty(parameters('metadata')),json('null'),parameters('metadata'))]",
            "parameters": "[if(empty(parameters('parameters')),json('null'),parameters('parameters'))]",
            "policyDefinitions": "[parameters('policyDefinitions')]",
            "policyDefinitionGroups": "[if(empty(parameters('policyDefinitionGroups')),variables('emptyArray'),parameters('policyDefinitionGroups'))]"
        },
        "scopeMg": "[tenantResourceId('Microsoft.Management/managementGroups', parameters('managementGroupId'))]"
    },
    "resources": [
        {
            "comments": "Policy Set Definition on Management Group Scope",
            "name": "[concat(variables('policySetDefinitionName'), '-mgDeployment')]",
            "apiVersion": "2020-06-01",
            "type": "Microsoft.Resources/deployments",
            "location": "[parameters('location')]",
            "condition": "[and(empty(parameters('subscriptionId')),not(empty(parameters('managementGroupId'))))]",
            "dependsOn": [
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "name": "[variables('policySetDefinitionName')]",
                            "type": "Microsoft.Authorization/policySetDefinitions",
                            "apiVersion": "2020-09-01",
                            "properties": "[variables('properties')]"
                        }
                    ]
                }
            }
        },
        {
            "comments": "Policy Set Definition on Subscription Scope",
            "name": "[concat(variables('policySetDefinitionName'), '-subDeployment')]",
            "apiVersion": "2020-06-01",
            "type": "Microsoft.Resources/deployments",
            "subscriptionId": "[parameters('subscriptionId')]",
            "location": "[parameters('location')]",
            "condition": "[and(empty(parameters('managementGroupId')),not(empty(parameters('subscriptionId'))))]",
            "dependsOn": [
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "name": "[variables('policySetDefinitionName')]",
                            "type": "Microsoft.Authorization/policySetDefinitions",
                            "apiVersion": "2020-09-01",
                            "properties": "[variables('properties')]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "policySetDefinitionName": {
            "type": "string",
            "value": "[variables('policySetDefinitionName')]",
            "metadata": {
                "description": "Name of the policy Set Definition"
            }
        },
        "policySetDefinitionId": {
            "type": "string",
            "value": "[if(not(empty(parameters('managementGroupId'))),extensionResourceId(variables('scopeMg'),'Microsoft.Authorization/policySetDefinitions',variables('policySetDefinitionName')),subscriptionResourceId(parameters('subscriptionId'),'Microsoft.Authorization/policySetDefinitions',variables('policySetDefinitionName')))]",
            "metadata": {
                "description": "The ID of the Policy Set Definition"
            }
        }
    }
}